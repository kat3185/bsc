<p id="notice"><%= notice %></p>

<h1>Event Volunteers</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @event_volunteers.each do |event_volunteer| %>
      <tr>
        <td><%= link_to 'Show', event_volunteer %></td>
        <td><%= link_to 'Edit', edit_event_volunteer_path(event_volunteer) %></td>
        <td><%= link_to 'Destroy', event_volunteer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<h1>EVENT VOLUNTEER COMMITMENTS</h1>
<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Role</th>
      <th>Start Time</th>
      <th>End Time</th>
    </tr>
  </thead>

  <tbody>
    <% @scheduled_slots.each do |event_volunteer| %>
      <tr>
        <td><%= event_volunteer.event_volunteer_slot.start_time.strftime('%B %-d %Y')%></td>
        <td><%= event_volunteer.event_volunteer_slot.role.name %></td>
        <td><%= event_volunteer.event_volunteer_slot.start_time.strftime('%I:%M %P')%></td>
        <td><%= event_volunteer.event_volunteer_slot.end_time.strftime('%I:%M %P')%></td>
        <td><%= button_to 'Flake', event_volunteer_path(event_volunteer), method: :delete, class: "alert button"%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<h1>EVENT VOLUNTEER AVAILABILITY</h1>
<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Role</th>
      <th>Start Time</th>
      <th>End Time</th>
      <th>Remove</th>
    </tr>
  </thead>

  <tbody>
    <% @event_volunteers.each do |availability| %>
      <tr>
        <td><%= availability.event_volunteer_slot.start_time.strftime('%B %-d %Y')%></td>
        <td><%= availability.event_volunteer_slot.role.name %></td>
        <td><%= availability.event_volunteer_slot.start_time.strftime('%I:%M %P')%></td>
        <td><%= availability.event_volunteer_slot.end_time.strftime('%I:%M %P')%></td>
        <td><%= button_to 'Cancel', event_volunteer_path(availability), method: :delete, class: "warning button"%></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>

