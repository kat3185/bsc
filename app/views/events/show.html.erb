<p id="notice"><%= notice %></p>

<h1>Event - <%= @event.start_time.strftime("%A: %I:%M%p") %> - <%= @event.end_time.strftime("%I:%M%p")%></h1>
<table>
  <thead>
    <tr>
      <th>Venue</th>
      <th>Band</th>
      <th>General Admission</th>
      <th>Student Admission</th>
      <th>Discounted Admission</th>
    </tr>
  </thead>

  <tbody>
    <tr>
      <td><%= @event.venue.name %></td>
      <td><%= @event.band.name %></td>
      <td>$<%= @event.price.general %></td>
      <td>$<%= @event.price.student %></td>
      <td>$<%= @event.price.discounted %></td>
    </tr>
  </tbody>
</table>
<table>
  <thead>
    <tr>
      <th>Role</th>
      <th>Name</th>
      <th>Start Time</th>
      <th>End Time</th>
      <th>Notes</th>
      <th>Sign Up</th>
    </tr>
  </thead>

  <tbody>
    <% @event_volunteer_slots.each do |slot| %>
      <tr>
        <td><%= slot.role.name %></td>
        <td><%= slot.display_volunteer %></td>
        <td><%= slot.start_time.strftime("%I:%M%p")  %></td>
        <td><%= slot.end_time.strftime("%I:%M%p")  %></td>
        <td><%= slot.notes if !slot.notes.nil? %></td>
        <td><%= button_to 'Sign up', event_slot_availabilities_path(event_slot_availability: {event_volunteer_slot_id: slot.id}), method: :post, class: "button" %></td>

      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Index', events_path %>
<%= link_to 'Edit', edit_event_path(@event) %> |
