<table>
  <thead>
    <tr>
      <th>Role</th>
      <th>Name</th>
      <th>Start Time</th>
      <th>End Time</th>
      <th>Notes</th>
      <th>Submit</th>
    </tr>
  </thead>

  <tbody>
    <% volunteer_slots.each do |slot| %>
      <tr>
        <%= form_for(slot) do |f| %>
        <td><%= slot.role.name %></td>
        <td><%= f.collection_select :event_volunteer_id, slot.available_slots, :id, :full_name, {include_blank: true, selected: slot.volunteer_id}, {class: "event-volunteer", id: slot.id} %></td>
        <td><%= slot.start_time.strftime("%I:%M%p")  %></td>
        <td><%= slot.end_time.strftime("%I:%M%p")  %></td>
        <td><%= f.text_field :notes, value: slot.notes %></td>
        <td><%= f.submit 'Assign Volunteer', class: "success button" %></td>
        <%end%>
      </tr>
    <% end %>
  </tbody>
</table>
