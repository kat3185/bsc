<h1>Editing Event</h1>

<p id="notice"><%= notice %></p>

<h1>Event - <%= @event.start_time.strftime("%A: %I:%M%p") %> - <%= @event.end_time.strftime("%I:%M%p")%></h1>
<table>
  <thead>
    <tr>
      <th>Venue</th>
      <th>Band</th>
      <th>General Admission</th>
      <th>Student Admission</th>
      <th>Discounted Admission</th>
    </tr>
  </thead>

  <tbody>
    <tr>
      <td><%= collection_select :event, :venue_id, @venues, :id, :name, selected: @event.venue.id %></td>
      <td><%= collection_select :event, :band_id, @bands, :id, :name, selected: @event.band.id %></td>
      <td><%= text_field_tag :event, :general_price, value: @event.price.general %></td>
      <td><%= text_field_tag :event, :student_price, value: @event.price.student %></td>
      <td><%= text_field_tag :event, :discounted_price, value: @event.price.discounted %></td>
    </tr>
  </tbody>
</table>
<table>
  <thead>
    <tr>
      <th>Role</th>
      <th>Name</th>
      <th>Start Time</th>
      <th>End Time</th>
      <th>Notes</th>
    </tr>
  </thead>

  <tbody>
    <% @event_volunteer_slots.each do |slot| %>
      <tr>
        <td><%= slot.role.name %></td>
        <td><%= collection_select :event_volunteer_slot, :user_id, @users, :id, :full_name, include_blank: true, selected: slot.volunteer_id %></td>
        <td><%= slot.start_time.strftime("%I:%M%p")  %></td>
        <td><%= slot.end_time.strftime("%I:%M%p")  %></td>
        <td><%= text_field_tag :event_volunteer_slot, :notes, value: slot.notes %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Edit', edit_event_path(@event) %> |
<%= link_to 'Back', events_path %>


<%= render 'form', event: @event %>

<%= link_to 'Show', @event %> |
<%= link_to 'Back', events_path %>
